<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite Books List </h3>
          <!-- ------------------------ -->
          <!-- FIX THE ADD BUTTON BELOW -->
          <!-- ------------------------ -->
          <a href="/books/details" class="btn btn-primary" role="button"><i class="fa fa-plus"></i> Add a book</a>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th class="text-center col-2">Price</th>
                  <th class="text-center col-2">Author</th>
                  <th class="text-center col-2">Genre</th>
                  <th class="text-center col-1"></th>
                  <th class="text-center col-1"></th>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < books.length; count++) { %>
                <tr>
                  <td><%= books[count].Title %></td>
                  <td class="text-center col-2">$<%= books[count].Price %></td>
                  <td class="text-center col-2"><%= books[count].Author %></td>
                  <td class="text-center col-2"><%= books[count].Genre %></td>
                          

                  <td class="text-center col-1">
                    <a href="/books/details/<%=books[count]._id%>" class="btn btn-success"><i class="fa fa-pencil-square-o"></i> Edit</a>
                    <!-- ADDED the EDIT BUTTON HERE -->
                  </td>

                  <td class="text-center col-1">
                    <a href="/books/delete/<%=books[count]._id%>" class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i> Delete</a>
                    <!-- ADD the DELETE BUTTON HERE -->
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


